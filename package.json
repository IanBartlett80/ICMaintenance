{
  "name": "icmaintenance",
  "version": "1.0.0",
  "description": "Building Maintenance Management SaaS Platform",
  "main": "backend/server.js",
  "scripts": {
    "dev:backend": "nodemon backend/server.js",
    "dev:customer": "cd frontend/customer-portal && npm start",
    "dev:staff": "cd frontend/staff-portal && npm start",
    "dev:trades": "cd frontend/trades-portal && npm start",
